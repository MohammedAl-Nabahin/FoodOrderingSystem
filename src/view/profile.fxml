<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: lightblue;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Control.ProfileController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="315.0" prefWidth="502.0" spacing="10.0" style="-fx-background-color: steelblue;">
         <children>
            <Label text="New Address" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="addressTextField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="300.0" style="-fx-background-radius: 50;" />
            <Label text="New Email" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="emailTextField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="300.0" style="-fx-background-radius: 50;" />
            <Label text="New Password" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="newPasswordTextField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="300.0" style="-fx-background-radius: 50;" />
         </children>
         <padding>
            <Insets top="30.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER" layoutX="1.0" layoutY="334.0" prefHeight="136.0" prefWidth="500.0" spacing="30.0">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonAction" style="-fx-background-radius: 50; -fx-background-color: steelblue;" text="Back">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="changeButton" mnemonicParsing="false" onAction="#changeButtonAction" style="-fx-background-color: steelblue; -fx-background-radius: 50;" text="Change">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
